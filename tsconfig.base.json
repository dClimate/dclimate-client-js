{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "noEmitOnError": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
